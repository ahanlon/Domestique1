extends layout

block content


	//----------- Ride Detail Lightbox / modal ------------>

	.box.rideDetail
		.box-row1
			.box-info.float-left
				h3#ride-nme.inline-block.rideName #{rides.name}
			.stats-box
				.panel.panel-success.inline-block.data.data-style
					.panel-heading
						h3.panel-title Style
					#ride-style.panel-body
						| "rideStyle"
				.panel.panel-success.inline-block.data
					.panel-heading
						h3.panel-title Time
					#ride-time.panel-body
						| "rideTime"
				.panel.panel-success.inline-block.data
					.panel-heading
						h3.panel-title Distance
					#ride-dist.panel-body
						| "rideDistance"
				.panel.panel-success.inline-block.data
					.panel-heading
						h3.panel-title Speed
					#ride-spd.panel-body
						| "rideSpeed"
				.panel.panel-success.inline-block.data
					.panel-heading
						h3.panel-title Elevation
					#ride-el.panel-body
						| "gain"
		.box-row2
			.panel.panel-info.box-info.float-left
				.panel-heading
					h3.panel-title Description
				#ride-desc.panel-body
					| "ride description"
			.inline-block#map
				div #map
					script L.mapbox.accessToken = 'pk.eyJ1IjoiYWhhbmxvbiIsImEiOiI1ZWJiMjc0MDNmZmI0ZWMxZDljZjNmNzBmZWI4NzhhZSJ9.xhJwrXxKBZZys2mTd0-1GQ';
						var map = L.mapbox.map('map', 'mapbox.streets').setView([40, -74.50], 9);
		.box-row3
			.close-button
				a(href='#') Close